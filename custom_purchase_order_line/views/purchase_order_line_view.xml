<odoo>
    <record id="view_purchase_order_line_form_inherit" model="ir.ui.view">
    <field name="name">purchase.order.line.form.inherit</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="attributes">
            <attribute name="widget">m2o_product_wizard</attribute>
            <attribute name="context">{'type': 'consu', 'is_storable': True, 'create': True, 'edit': True}</attribute>
            <attribute name="options">{'no_quick_create': True}</attribute>
        </xpath>
    </field>
</record>

