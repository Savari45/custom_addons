<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define GST 28% where tax is included in price -->
    <record id="tax_gst_s_28" model="account.tax">
        <field name="name">14% SGST S IN</field>
        <field name="amount">14</field>
        <field name="amount_type">percent</field>
        <field name="type_tax_use">sale</field>
        <field name="price_include_override">tax_included</field>  <!-- Tax included in price -->
        <field name="company_id" ref="base.main_company"/>
        <field name="invoice_label">SGST 14%</field>
        <field name="description">SGST</field>
        <field name="include_base_amount">False</field>
    </record>
