        <field name="description">CGST</field>
        <field name="include_base_amount">False</field>
    </record>
    <!-- Define 28% GST Group Tax (Combining SGST 9% and CGST 9%) -->
    <record id="tax_gst_group_28" model="account.tax">
        <field name="name">28% GST S IN</field>
        <field name="type_tax_use">sale</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="amount_type">group</field>
        <field name="children_tax_ids" eval="[(6, 0, [ref('tax_gst_s_28'), ref('tax_cgst_s_28')])]"/>
        <field name="price_include_override">tax_included</field>
        <field name="invoice_label">GST 28%</field>
        <field name="description">GST 28%</field>
