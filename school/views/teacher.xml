<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_school_teacher_tree" model="ir.ui.view">
        <field name="name">school.teacher.tree</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <list string="Teachers">
                <field name="name"/>
                <field name="qualification"/>
                <field name="contact_no"/>
                <field name="email"/>
                <field name="joining_date"/>
            </list>
        </field>
    </record>

    <record id="view_school_teacher_form" model="ir.ui.view">
        <field name="name">school.teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="qualification"/>
                        <field name="subject_ids" widget="many2many_tags"/>
                        <field name="contact_no"/>
                        <field name="email"/>
                        <field name="joining_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">list,form</field>
          <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Register a Teacher!
              </p>
            </field>
    </record>

    <menuitem id="menu_school_teachers" name="Teachers" parent="menu_school_root" action="action_school_teacher"/>
</odoo>
